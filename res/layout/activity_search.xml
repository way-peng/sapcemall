<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/title_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/commendation_scroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/commendation_title"
        android:layout_marginTop="5.0dip"
        android:fadeScrollbars="true" >

        <!-- 搜索框 -->

        <RelativeLayout
            android:id="@+id/home_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10.0dip"
            android:paddingLeft="2.0dip"
            android:paddingRight="5.0dip" >

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="41.0dip" >

                <AutoCompleteTextView
                    android:id="@+id/homeActivity_autoComplete"
                    android:layout_width="fill_parent"
                    android:layout_height="41.0dip"
                    android:layout_marginRight="46.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_search_box_x"
                    android:completionThreshold="1"
                    android:dropDownWidth="fill_parent"
                    android:focusable="false"
                    android:hint="商品搜索"
                    android:paddingLeft="10.0dip"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />
                <!-- 搜索按钮 -->

                <Button
                    android:layout_width="46.0dip"
                    android:layout_height="41.0dip"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_btn_selector" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>